<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wood_background_start"
    tools:context=".view.screens.StartFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutForPickers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/startButton">

        <ImageView
            android:id="@+id/leftBorderImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/baseline_border_vertical_24"

            app:layout_constraintStart_toStartOf="@id/numberPickerHeight"
            app:layout_constraintEnd_toEndOf="@id/numberPickerHeight"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/numberPickerHeight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:itemCount="5"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:theme="@style/NumberPickerTheme"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftBorderImageView" />

        <ImageView
            android:id="@+id/topBorderImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/baseline_border_horizontal_24"

            app:layout_constraintEnd_toEndOf="@+id/numberPickerWidth"
            app:layout_constraintStart_toStartOf="@+id/numberPickerWidth"
            app:layout_constraintTop_toTopOf="parent" />

        <NumberPicker
            android:id="@+id/numberPickerWidth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/NumberPickerTheme"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

            app:layout_constraintStart_toEndOf="@+id/xImageView"
            app:layout_constraintTop_toBottomOf="@+id/topBorderImageView" />

        <ImageView
            android:id="@+id/xImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:src="@drawable/x_24"

            app:layout_constraintBottom_toBottomOf="@id/numberPickerHeight"
            app:layout_constraintStart_toEndOf="@+id/numberPickerHeight"
            app:layout_constraintTop_toTopOf="@id/numberPickerHeight" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/startButton"
        android:layout_width="@dimen/start_button_size"
        android:layout_height="100dp"
        android:padding="12dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/play_button_selector"
        android:contentDescription="@string/start"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/exit_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>