<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start_landscape"
    tools:context=".view.screens.StartFragment">


    <NumberPicker
        android:id="@+id/numberPickerHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="132dp"
        android:theme="@style/NumberPickerTheme"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/numberPickerWidth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:theme="@style/NumberPickerTheme"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

        app:layout_constraintStart_toEndOf="@id/numberPickerHeight"
        app:layout_constraintTop_toTopOf="@+id/numberPickerHeight" />

    <ImageButton
        android:id="@+id/startButton"
        android:layout_width="142dp"
        android:layout_height="144dp"
        android:background="@drawable/button_start"
        android:contentDescription="@string/start"

        android:layout_marginStart="480dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/exitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"

        android:contentDescription="@string/exit"
        android:padding="16dp"
        android:src="@drawable/exit_button"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/soundButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintWidth_percent="1"

        android:contentDescription="@string/sound"
        android:padding="16dp"
        android:src="@drawable/music"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/exitButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>